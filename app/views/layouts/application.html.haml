!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %title= content_for?(:title) ? yield(:title) : "Lms"
      %meta{:content => content_for?(:description) ? yield(:description) : "Lms", :name => "description"}
      %meta{:name =>"viewport", :content=>"width-device-width, initial-scale=1.0"}
        = stylesheet_link_tag "application", :media => "all"
        = javascript_include_tag "application"
        = csrf_meta_tags
        = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    #container.container
      %nav
        = render 'layouts/navigation'
        = render 'layouts/messages'
      .row
        .large-3.columns
          .panel
            = link_to image_tag("portrait.png"), "#"
            %h5
              = if current_user
                = link_to current_user.name,"#"
            .section-container.vertical-nav{:data=>{:section=>"",:options=>"deep_linking: false; one_up: true"}} hello.
            %section.section
              %h5.title
                = link_to "Activity", "#", :class=>"has_tip", :title=>"Remind All Your Learning Activity."
              %h5.title
                = link_to "Scoresheet", "#", :class=>"has_tip", :title=>"Check Your Score."
              %h5.title
                = link_to "Social", "#", :class=>"has_tip", :title=>"Manage Your Social Learning Network"
        .large-6.columns
          #main{:role => "main"}
            = yield
        %aside.large-3.columns.hide-for-small
          %p
            image_tag "ad"
          %p
            image_tag "ad"
    %footer
    / ! end of #container
